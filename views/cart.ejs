    <section class="cart_area">
      <div class="container">
        <div class="cart_inner">
          <div class="table-responsive">
            <table class="table">
              <thead>
                <tr>
                  <th scope="col">Product</th>
                  <th scope="col">Price</th>
                  <th scope="col">Quantity</th>
                  <th scope="col">Total</th>
                </tr>
              </thead>
              <tbody>
                <% for (item of cart){ %>
                <tr>
                  <td>
                    <div class="media">
                      <div class="d-flex">
                        <img src="<%= products.filter(el => el._id == item.pid)[0].image_url %>" style="width: 50px;" alt="" />
                      </div>
                      <div class="media-body">
                        <p><%= products.filter(el => el._id == item.pid)[0].description %></p>
                      </div>
                    </div>
                  </td>
                  <td>
                    <h5>$<%= products.filter(el => el._id == item.pid)[0].price %></h5>
                  </td>
                  <td>
                    <div class="product_count">
                      <input
                        type="number"
                        name="qty"
                        id="sst<%= products.filter(el => el._id == item.pid)[0]._id %>"
                        maxlength="12"
                        value="<%= item.quantity %>"
                        title="Quantity:"
                        class="input-text qty"
                      />
                      <button
                        onclick="var result = document.getElementById('sst<%= products.filter(el => el._id == item.pid)[0]._id %>'); var sst = result.value; if( !isNaN( sst )) result.value++;return false;"
                        class="increase items-count"
                        type="button"
                      >
                        <i class="lnr lnr-chevron-up"></i>
                      </button>
                      <button
                        onclick="var result = document.getElementById('sst<%= products.filter(el => el._id == item.pid)[0]._id %>'); var sst = result.value; if( !isNaN( sst ) &amp;&amp; sst > 0 ) result.value--;return false;"
                        class="reduced items-count"
                        type="button"
                      >
                        <i class="lnr lnr-chevron-down"></i>
                      </button>
                    </div>
                  </td>
                  <td>
                    <h5>$720.00</h5>
                  </td>
                </tr>
                <% } %>
